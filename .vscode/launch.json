    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "--slug <course slug> --dashboard <dashboard page> --url <course url> --login_url <login url> --email <email> --password '<password; if with dollar sign escape it e.g. \\$>'"
        }
    ]
}